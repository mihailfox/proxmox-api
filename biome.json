{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "maxSize": 5242880
  },
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["docs/openapi/**/*"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ],
  "javascript": {
    "globals": [
      "module",
      "require",
      "__dirname"
    ]
  }
}
