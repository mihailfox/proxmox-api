{
  "name": "proxmox-api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "workspaces": [
    ".github/actions/proxmox-openapi-artifacts",
    "tools/api-scraper",
    "tools/api-normalizer",
    "tools/openapi-generator",
    "tools/automation",
    "tools/release-notes",
    "tools/shared"
  ],
  "description": "Tooling to scrape the Proxmox API viewer and generate OpenAPI specifications.",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "scraper:scrape": "tsx tools/api-scraper/src/cli.ts",
    "normalizer:generate": "tsx tools/api-normalizer/src/cli.ts",
    "openapi:generate": "tsx tools/openapi-generator/src/cli.ts",
    "openapi:validate": "tsx tools/openapi-generator/src/validate.ts",
    "automation:pipeline": "tsx tools/automation/src/cli.ts",
    "automation:summary": "tsx tools/automation/scripts/format-summary.ts",
    "pages:prepare": "tsx tools/projects/publish-pages.ts",
    "ui:sync-openapi": "tsx tools/projects/sync-openapi-to-ui.ts",
    "types:check": "tsc --noEmit && tsc --noEmit -p app/tsconfig.json && tsc --noEmit -p tools/automation/tsconfig.json",
    "build": "npm run types:check && npm run ui:build",
    "ui:typegen": "react-router typegen",
    "ui:dev": "npm run ui:typegen && vite dev",
    "ui:build": "npm run ui:sync-openapi && npm run ui:typegen && vite build",
    "ui:preview": "npm run ui:build && vite preview",
    "ui:test": "vitest run",
    "scraper:test:e2e": "playwright test -c tools/api-scraper",
    "scraper:test:unit": "tsx tools/api-scraper/tests/cli-options.spec.ts",
    "normalizer:test": "vitest run --config tools/api-normalizer/vitest.config.ts",
    "openapi:test": "vitest run --config tools/openapi-generator/vitest.config.ts",
    "automation:test": "vitest run --config tools/automation/vitest.config.ts",
    "regression:test": "vitest run --config tests/regression/vitest.config.ts",
    "test:all": "npm run ui:test && npm run scraper:test:unit && npm run normalizer:test && npm run openapi:test && npm run automation:test && npm run regression:test",
    "test": "npm run test:all",
    "action:install": "npm install --workspace .github/actions/proxmox-openapi-artifacts",
    "action:build": "npm run build --workspace .github/actions/proxmox-openapi-artifacts",
    "action:package": "npm run lint --workspace .github/actions/proxmox-openapi-artifacts && npm run typecheck --workspace .github/actions/proxmox-openapi-artifacts && npm run build --workspace .github/actions/proxmox-openapi-artifacts",
    "release:notes:compose": "tsx tools/scripts/compose-release-notes.ts",
    "release:notes:issues": "tsx tools/scripts/generate-release-notes.ts",
    "release:test": "vitest run --config tools/release-notes/vitest.config.ts"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@biomejs/biome": "^2.2.5",
    "@playwright/test": "^1.55.1",
    "@react-router/dev": "^7.9.3",
    "@react-router/fs-routes": "^7.9.3",
    "@types/node": "^22.18.8",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@types/swagger-ui-react": "^5.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.0",
    "openapi-types": "^12.1.3",
    "tsx": "^4.19.2",
    "typescript": "5.7.3",
    "vite": "^6.3.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@react-router/node": "^7.9.3",
    "@react-router/serve": "^7.9.3",
    "isbot": "^5.1.9",
    "playwright": "^1.55.1",
    "react-router": "^7.9.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swagger-ui": "^5.29.2",
    "swagger-ui-react": "^5.29.2",
    "yaml": "^2.8.1"
  },
  "overrides": {
    "esbuild": "0.25.10",
    "estree-util-value-to-estree": "^3.4.0",
    "prismjs": "^1.30.0"
  }
}
