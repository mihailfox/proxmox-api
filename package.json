{
  "name": "proxmox-api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Tooling to scrape the Proxmox API viewer and generate OpenAPI specifications.",
  "license": "MIT",
  "engines": {
    "node": "^22.0.0"
  },
  "scripts": {
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "test": "playwright test -c tools/api-scraper",
    "scraper:scrape": "tsx tools/api-scraper/src/cli.ts",
    "normalizer:generate": "tsx tools/api-normalizer/src/cli.ts",
    "openapi:generate": "tsx tools/openapi-generator/src/cli.ts",
    "openapi:validate": "tsx tools/openapi-generator/src/validate.ts",
    "automation:pipeline": "tsx tools/automation/src/cli.ts",
    "automation:summary": "tsx tools/automation/scripts/format-summary.ts",
    "build": "tsc --noEmit && tsc --noEmit -p app/tsconfig.json && tsc --noEmit -p tools/automation/tsconfig.json",
    "ui:dev": "remix vite:dev",
    "ui:build": "remix vite:build",
    "ui:preview": "remix vite:preview",
    "test:ui": "vitest",
    "test:normalizer": "vitest run --config tools/api-normalizer/vitest.config.ts",
    "test:openapi": "vitest run --config tools/openapi-generator/vitest.config.ts",
    "test:automation": "vitest run --config tools/automation/vitest.config.ts",
    "test:regression": "vitest run --config tests/regression/vitest.config.ts",
    "action:install": "npm ci --prefix .github/actions/proxmox-openapi-artifacts",
    "action:package": "npm run lint --prefix .github/actions/proxmox-openapi-artifacts && npm run typecheck --prefix .github/actions/proxmox-openapi-artifacts"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@biomejs/biome": "^2.2.5",
    "@playwright/test": "^1.55.1",
    "@remix-run/dev": "^2.17.1",
    "@types/node": "^22.18.8",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.0",
    "openapi-types": "^12.1.3",
    "tsx": "^4.19.2",
    "typescript": "5.7.3",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@remix-run/node": "^2.17.1",
    "@remix-run/react": "^2.17.1",
    "@remix-run/serve": "^2.17.1",
    "isbot": "^5.1.9",
    "playwright": "^1.55.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swagger-ui": "^5.29.2",
    "swagger-ui-react": "^5.29.2",
    "yaml": "^2.8.1"
  },
  "overrides": {
    "esbuild": "0.25.10",
    "estree-util-value-to-estree": "^3.4.0",
    "prismjs": "^1.30.0"
  }
}
