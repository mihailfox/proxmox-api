{
  "name": "proxmox-api",
  "version": "0.1.0",
  "private": true,
  "description": "Tooling to scrape the Proxmox API viewer and generate OpenAPI specifications.",
  "license": "MIT",
  "engines": {
    "node": "^22.0.0"
  },
  "scripts": {
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "test": "playwright test -c tools/api-scraper",
    "scraper:scrape": "ts-node tools/api-scraper/src/cli.ts",
    "normalizer:generate": "ts-node tools/api-normalizer/src/cli.ts",
    "openapi:generate": "ts-node tools/openapi-generator/src/cli.ts",
    "openapi:validate": "ts-node tools/openapi-generator/src/validate.ts",
    "automation:pipeline": "ts-node tools/automation/src/pipeline.ts",
    "build": "tsc --noEmit && tsc --noEmit -p app/tsconfig.json && tsc --noEmit -p tools/automation/tsconfig.json",
    "ui:dev": "remix vite:dev",
    "ui:build": "remix vite:build",
    "ui:preview": "remix vite:preview",
    "test:ui": "vitest",
    "test:normalizer": "vitest run --config tools/api-normalizer/vitest.config.ts",
    "test:openapi": "vitest run --config tools/openapi-generator/vitest.config.ts",
    "test:regression": "vitest run --config tests/regression/vitest.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@playwright/test": "^1.55.1",
    "@remix-run/dev": "^2.12.0",
    "@apidevtools/swagger-parser": "^12.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^2.1.3",
    "openapi-types": "^12.1.3",
    "jsdom": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4",
    "vite": "^5.4.2",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "@remix-run/node": "^2.12.0",
    "@remix-run/react": "^2.12.0",
    "@remix-run/serve": "^2.12.0",
    "isbot": "^5.1.9",
    "playwright": "^1.55.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yaml": "^2.8.1"
  }
}
