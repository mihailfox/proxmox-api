{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "types": [
      "node",
      "@playwright/test",
      "vitest/globals"
    ],
    "outDir": "dist"
  },
  "include": [
    "tools/api-scraper/**/*.ts",
    "tools/api-normalizer/**/*.ts",
    "tools/openapi-generator/**/*.ts",
    "tools/shared/**/*.ts",
    "tools/release-notes/**/*.ts",
    "tools/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
