{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@proxmox-api/shared": [
        "tools/shared"
      ],
      "@proxmox-api/shared/*": [
        "tools/shared/*"
      ],
      "@proxmox-api/api-scraper": [
        "tools/api-scraper"
      ],
      "@proxmox-api/api-scraper/*": [
        "tools/api-scraper/src/*"
      ],
      "@proxmox-api/api-normalizer": [
        "tools/api-normalizer"
      ],
      "@proxmox-api/api-normalizer/*": [
        "tools/api-normalizer/src/*"
      ],
      "@proxmox-api/openapi-generator": [
        "tools/openapi-generator"
      ],
      "@proxmox-api/openapi-generator/*": [
        "tools/openapi-generator/src/*"
      ],
      "@proxmox-api/automation": [
        "tools/automation/src/index.ts"
      ],
      "@proxmox-api/automation/*": [
        "tools/automation/src/*"
      ],
    },
    "rootDirs": [
      ".",
      "app/",
      "app/src/"
    ],
    "types": [
      "node",
      "vite/client",
      "@playwright/test",
      "vitest/globals"
    ],
    "outDir": "app/dist"
  },
  "include": [
    "tools/api-scraper/**/*.ts",
    "tools/api-normalizer/**/*.ts",
    "tools/openapi-generator/**/*.ts",
    "tools/automation/**/*.ts",
    "tools/shared/**/*.ts",
    "tools/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app/dist"
  ]
}
