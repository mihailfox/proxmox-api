{
  "name": "proxmox-openapi-artifacts-action",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Action that runs the Proxmox OpenAPI automation pipeline.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "biome lint src",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "bundle": "esbuild src/main.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --sourcemap --external:playwright",
    "package": "npm run typecheck && npm run bundle",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.5.4"
  }
}
