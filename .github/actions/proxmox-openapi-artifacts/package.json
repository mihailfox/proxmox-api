{
  "name": "proxmox-openapi-artifacts-action",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Action that runs the Proxmox OpenAPI automation pipeline.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "biome lint src",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "bundle": "esbuild src/main.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --sourcemap --external:playwright --external:@apidevtools/swagger-parser --external:yaml",
    "package": "npm run typecheck && npm run bundle",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.25.10",
    "openapi-types": "^12.1.3",
    "playwright": "^1.55.1",
    "typescript": "^5.7.3",
    "yaml": "^2.8.1"
  }
}
