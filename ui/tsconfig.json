{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "types": ["vite/client", "vitest/globals"],
    "allowJs": false,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
